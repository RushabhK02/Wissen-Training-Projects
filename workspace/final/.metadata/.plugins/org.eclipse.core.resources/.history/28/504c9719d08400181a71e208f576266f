package com.shopping.product;

import java.util.List;

import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.annotation.Bean;

import com.shopping.product.model.Product;
import com.shopping.product.repository.ProductRepository;

@SpringBootApplication
public class ProductCatalogServiceApplication {

	public static void main(String[] args) {
		SpringApplication.run(ProductCatalogServiceApplication.class, args);
		
	}
	
	@Bean
	public CommandLineRunner test(ProductRepository productRepository) {
		return args->{
			List<Product> products = productRepository.find();
			for(Product product:products) {
			System.out.println(products.size());
			}
			
			Product product = productRepository.findByProperty(1);
			System.out.println("Laptop");
		};
	}
}
